<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_linear"
    tools:context="com.avantadi.petagramCurso3Semana5.fragment.PerfilMascotaFragment">

    <ImageView
        android:id="@+id/imgFotoFPM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/icons8_dog_100" />

    <TextView
        android:id="@+id/tvNombreFPM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_text_image"
        android:gravity="center"
        android:text="tvNombreFPM"
        android:textSize="@dimen/name_text_size"
        android:textStyle="bold" />

    <View style="@style/Divider"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPerfilMascotas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>